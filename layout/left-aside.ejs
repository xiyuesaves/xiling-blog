
<div class="left-aside">
	<div class="avatar">
		<img src="<%- theme.avatar %>">
	</div>
	<!-- 作者和欢迎词 -->
	<p class="name"><%- config.author%></p>
	<p class="introduction"><%- theme.introduction %></p>

<%
	function newPage(url) {
		if (/^http(s?):\/\//.test(url)) {
			return 'target="_blank"';
		}
	}
%>

<%
	for(let key in theme.nav){
%>
	<div class="nav-list">
		<p class="title"><%- key %></p>
<%
		for(let item in theme.nav[key]){
			if (!theme.nav[key][item].list) {
%>
		<a class="link" title="<%- theme.nav[key][item].title %>" <%- newPage(theme.nav[key][item].url) %> href="<%- theme.nav[key][item].url %>">
			<i class="icon icons <%- theme.nav[key][item].icon %>"><%- item %></i>
		</a>
<%
			} else {
%>
		<div class="fold-nav">
			<div class="link switch">
				<i class="icon icons <%- theme.nav[key][item].icon %>"><%- item %></i>
				<i class="flod-icon icon icons i-flod"></i>
			</div>
<%
				for(let fold in theme.nav[key][item].list){
%>
			<a href="<%- theme.nav[key][item].list[fold].url %>" <%- newPage(theme.nav[key][item].list[fold].url) %> class="link">
				<i class="icon icons <%- theme.nav[key][item].list[fold].icon %>"><%- fold %></i>
			</a>
<%
				}
%>
		</div>
<%
			}
		}
%>
		</div>
<%
	}
%>
</div>
<%- js('js/left-aside.js') %>
