<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title><%- config.title %></title>
	<!-- 所有样式全在此处一次性加载 -->
	<!-- 主要样式 -->
	<%- css('css/main.css') %>
	<!-- 首页样式 -->
	<%- css('css/index.css') %>
	<!-- 文章页样式 -->
	<%- css('css/post.css') %>
	<!-- 右侧栏 -->
	<%- css('css/right-aside.css') %>
	<!-- 左侧栏 -->
	<%- css('css/left-aside.css') %>
	<!-- 代码高亮 -->
	<%- css('css/srcery.css') %>
	<!-- 图标 -->
	<!-- <%- css('css/iconfont.css') %> -->
	<%- css('//at.alicdn.com/t/font_3205213_le376armc6m.css') %>
</head>
<body>
	<div id="main" style="background-image: url(<%- theme.backgroundImage %>);">
		<!-- 顶部导航 -->
		<header id="header-nav">
			<%- include('header-nav.ejs') %>
		</header>

		<!-- 左侧栏 -->
		<aside id="left-aside">
			<%- include('left-aside.ejs') %>
		</aside>

		<!-- 正文 -->
		<div id="main-block">
			<!-- 居中内容块 -->
			<div class="center-block">
			    <!-- 加载条 -->
			    <div class="loading-bar"></div>
			    <!-- 主内容 -->
				<%- body %>
			</div>
			<div id="right-aside">
				<%- include('right-aside.ejs') %>
			</div>
		</div>
	</div>
</body>
<!-- 脚本 -->
<%- js('js/SmoothScroll.min.js')%>
<%- js('https://cdn.jsdelivr.net/npm/pjax/pjax.min.js')%>
<%- js('js/main.js')%>
</html>